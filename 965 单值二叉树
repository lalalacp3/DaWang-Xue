 Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution:
    def isUnivalTree(self, root: TreeNode) -> bool:
        def dfs(node,n):
            if node:
                if node.val ==n:
                    return dfs(node.left,node.val) and dfs(node.right,node.val)
                else:
                    return False
            else:
                return True
        return dfs(root,root.val)        
        
  dfs
