# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution:
    def isSymmetric(self, root: TreeNode) -> bool:
        def recur(l,r):
            if not r and not l:
                return True
            if not l or not r or l.val!=r.val:
                return False
            return recur(l.left,r.right) and recur(l.right,r.left)
        if not root:
            return True
            
        return recur(root.left,root.right) 
            
     
