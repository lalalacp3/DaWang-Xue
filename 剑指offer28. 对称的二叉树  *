# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution:
    def isSymmetric(self, root: TreeNode) -> bool:
        def recur(l,r):
            if not l and not r:    # 如果没有子叶的话，返回True
                return True
            if not l or not r or l.val!=r.val:    #如果左边越过了子叶右边没有，反之，或者左右值不相等， 返回False
                return False
            return recur(l.left,r.right) and recur(l.right,r.left)  #递归
        
        return recur(root.left,root.right) if root else True     # 返回值
      
     
